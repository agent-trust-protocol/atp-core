# Agent Trust Protocol - Environment Configuration Example
# Copy this file to .env.prod for production deployment

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_USER=atp_user
POSTGRES_DB=atp_production
DATABASE_URL=postgresql://atp_user:your_secure_postgres_password_here@postgres:5432/atp_production

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=300

# JWT and Encryption
JWT_SECRET=your_jwt_secret_min_32_chars_secure_random_string_here
ENCRYPTION_KEY=your_32_byte_encryption_key_base64_encoded_here

# Service Ports (Internal Docker Network)
IDENTITY_SERVICE_PORT=3001
PERMISSION_SERVICE_PORT=3003
AUDIT_LOGGER_PORT=3005
WEBSITE_PORT=3000

# External API URLs (Public endpoints)
NEXT_PUBLIC_ATP_IDENTITY_URL=https://api.yourdomain.com/identity
NEXT_PUBLIC_ATP_PERMISSION_URL=https://api.yourdomain.com/permission
NEXT_PUBLIC_ATP_AUDIT_URL=https://api.yourdomain.com/audit

# IPFS Configuration
IPFS_URL=http://ipfs:5001

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password_here
PROMETHEUS_RETENTION=30d

# Environment
NODE_ENV=production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_ATTEMPTS=5

# Security
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-atp-backups-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Resource Limits
MAX_MEMORY_USAGE=2G
MAX_CPU_USAGE=2.0
LOG_LEVEL=info
# Production Domain Configuration for ATP
# Agent Trust Protocolâ„¢ Production Deployment

# Primary Application Domain
NEXT_PUBLIC_APP_DOMAIN=https://agenttrustprotocol.com
NEXT_PUBLIC_DEV_DOMAIN=https://agenttrust.dev

# API Endpoints (adjust based on your deployment)
ATP_API_URL=https://api.agenttrustprotocol.com
ATP_QUANTUM_URL=https://quantum.agenttrustprotocol.com
NEXT_PUBLIC_ATP_PERMISSION_URL=https://api.agenttrustprotocol.com/permission

# CORS Configuration for Production
CORS_ORIGINS=https://agenttrustprotocol.com,https://agenttrust.dev,https://www.agenttrustprotocol.com,https://www.agenttrust.dev

# Security Headers
NEXT_PUBLIC_SECURITY_HEADERS=true
NEXT_PUBLIC_CSP_ENABLED=true

# SSL/TLS Configuration
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Production Settings
NODE_ENV=production
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ERROR_REPORTING=true

# Domain-specific feature flags
NEXT_PUBLIC_ENTERPRISE_FEATURES=true
NEXT_PUBLIC_DEVELOPER_PORTAL=true
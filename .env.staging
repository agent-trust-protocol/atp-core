# ATPâ„¢ Staging Environment Configuration
# =====================================

# Environment
NODE_ENV=staging
ENVIRONMENT=staging

# Security Keys (CHANGE IN PRODUCTION!)
AUDIT_ENCRYPTION_KEY=staging-audit-key-32-chars-long-12345678
POSTGRES_PASSWORD=staging-postgres-password-change-me
GRAFANA_PASSWORD=staging-grafana-admin-password

# Service Ports
IDENTITY_SERVICE_PORT=3001
VC_SERVICE_PORT=3002
PERMISSION_SERVICE_PORT=3003
RPC_GATEWAY_PORT=3000
RPC_GATEWAY_HTTPS_PORT=3443
AUDIT_LOGGER_PORT=3005
PROTOCOL_INTEGRATIONS_MCP_PORT=3006
PROTOCOL_INTEGRATIONS_A2A_PORT=3007
PROTOCOL_INTEGRATIONS_BRIDGE_PORT=3008

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=atp_staging
POSTGRES_USER=atp_user

# IPFS Configuration
IPFS_HOST=ipfs
IPFS_PORT=5001
IPFS_GATEWAY_PORT=8080

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# External URLs (for staging)
PUBLIC_URL=http://localhost
API_BASE_URL=http://localhost/api
DOCS_URL=http://localhost/docs

# Trust Level Configuration
DEFAULT_TRUST_LEVEL=BASIC
MAX_TRUST_LEVEL=ENTERPRISE

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# WebSocket Configuration
WS_PORT=8081
WS_PATH=/ws

# Certificate Configuration (for mTLS)
TLS_CERT_PATH=/etc/ssl/certs/atp-staging.crt
TLS_KEY_PATH=/etc/ssl/private/atp-staging.key
TLS_CA_PATH=/etc/ssl/certs/atp-ca.crt

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# Performance Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# Feature Flags
ENABLE_METRICS=true
ENABLE_AUDIT_ENCRYPTION=true
ENABLE_IPFS_STORAGE=true
ENABLE_MTLS=false
ENABLE_RATE_LIMITING=true